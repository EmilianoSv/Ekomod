---
import { Icon } from "astro-icon/components";
---

<header
	id="navbar"
	class="h-20 w-full flex bg-[#ffffff52] fixed top-0 transition-all duration-400 z-50 backdrop-blur-xs"
>
	<div class="m-auto flex gap-3">
		<Icon name="ekomod-logo" class="md:w-12 md:h-12" />
		<span class="text-black text-2xl content-center font-bold md:text-4xl"
			>EKOMOD</span
		>
	</div>
</header>

<script>
	let lastScrollTop = 0;
	const navbar = document.getElementById("navbar");
	window.addEventListener("scroll", function () {
		let scrollTop =
			window.pageYOffset || document.documentElement.scrollTop;
		if (scrollTop > lastScrollTop) {
			navbar?.classList.add("active");
		} else {
			navbar?.classList.remove("active");
		}
		lastScrollTop = scrollTop;
	});
</script>

<style>
	header.active {
		top: -80px;
	}
</style>
