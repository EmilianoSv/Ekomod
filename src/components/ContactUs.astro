---
import { ContactForm, contactFormValidator } from "./_ContactForm";
---

<section id="contact-us" class="h-svh content-center">
	<div
		id="form-container"
		class="px-4 py-4 flex flex-col gap-4 md:h-full md:justify-center md:gap-10 lg:px-12 lg:py-0"
	>
		<h3
			class="text-5xl text-center w-full md:text-7xl lg:text-center lg:px-20 lg:pt-20"
		>
			Cont√°ctanos
		</h3>
		<div
			class="md:px-10 lg:px-0 lg:self-center lg:w-[90%] lg:content-center"
		>
			<ContactForm client:load />
		</div>
	</div>
</section>

<style>
	@media screen and (min-width: 1230px) and (max-width: 1440px) {
		h3 {
			font-size: 3rem;
			padding-top: 0;
			height: 5rem;
		}

		#form-container {
			gap: 0rem;
		}

		#contact-form {
			gap: 0.5rem;
		}

		label {
			font-size: 1.5rem;
		}

		input {
			height: calc(var(--spacing) * 10);
			padding: 0.5rem;
			font-size: 1rem;
		}

		select {
			height: calc(var(--spacing) * 10);
			font-size: 1rem;
			padding: 0.5rem;
		}

		textarea {
			height: calc(var(--spacing) * 40);
			padding: 0.5rem;
			font-size: 1rem;
		}

		button {
			height: calc(var(--spacing) * 10);
			font-size: 1rem;
		}
	}
</style>
