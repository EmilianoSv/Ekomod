---
import background from "../assets/background-hero-image.png";
import { Image } from "astro:assets";
import HeroContent from "./HeroContent";
---

<section id="inicio" class="h-svh relative overflow-hidden">
	<div class="absolute inset-0 bg-linear-to-b from-black/40 via-black/30 to-black/50 z-10"></div>
	<div class="w-full h-full absolute inset-0">
		<Image
			src={background}
			alt="casas-modulares"
			format="avif"
			quality="high"
			class="w-full h-full object-cover"
		/>
	</div>
	<div class="relative z-20 flex h-full items-center justify-center p-6 md:p-12 lg:p-20">
		<HeroContent client:load />
	</div>
</section>
